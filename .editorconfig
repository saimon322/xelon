root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# HTML
[*.{html,html,cshtml}]
indent_style = space
indent_size  = 4

# CSS
[*.scss]
indent_style = space
indent_size  = 2
quote_type = single

# JAVASCRIPT
[*.{js,jsx}]
indent_style = space
indent_size  = 4
quote_type = single

# PHP
[*.php]
indent_style = space
indent_size  = 4

# JSON
[*.json]
indent_style = space
indent_size  = 2

# ESLINT
[*.eslintrc]
indent_style = space
indent_size  = 2

# STYLELING
[*.stylelintrc]
indent_style = space
indent_size  = 2

# YAML
[*.yaml]
indent_style = space
indent_size  = 2

# XML
[*.{xml,svg}]
indent_style = space
indent_size  = 4
